{
  "name": "cee-render",
  "version": "0.2.1",
  "description": "Librería renderizado del CEE",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "pretest": "npm run sass",
    "test": "jest",
    "test:verbose": "npm run sass && jest --verbose",
    "test:watch": "npm run sass && jest --watchAll",
    "build": "npm run test && rimraf ./build && gulp",
    "prepare": "npm run build",
    "publish:server": "npm publish",
    "sass": "rimraf ./build && gulp sass",
    "dev": "gulp dev & ts-node dev.ts"
  },
  "engines": {
    "node": ">=8.9.1"
  },
  "keywords": [
    "TS",
    "Javascript",
    "npm"
  ],
  "author": "Alejandro Frías",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alejandrofdiaz/cee-render.git"
  },
  "bugs": {
    "url": "https://github.com/alejandrofdiaz/cee-render/issues"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/handlebars": "^4.0.37",
    "@types/jest": "^22.2.3",
    "@types/node": "^9.6.7",
    "@types/puppeteer": "^1.2.3",
    "@types/xml-js": "^1.0.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-remove-console": "^6.9.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.4.0",
    "cssnano": "^3.10.0",
    "express": "^4.16.3",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.1",
    "gulp-postcss": "^7.0.1",
    "gulp-sass": "^4.0.1",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-typescript": "^4.0.2",
    "jest": "^22.4.3",
    "merge2": "^1.2.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-url": "^7.3.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.2",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true
  },
  "dependencies": {
    "handlebars": "^4.0.11",
    "puppeteer": "^1.3.0",
    "xml-js": "^1.6.2"
  }
}
