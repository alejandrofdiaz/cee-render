{
	"compilerOptions": {
		"outDir": "build/dist",
		"target": "es5",
		"lib": [
			"es6",
			"dom"
		],
		"sourceMap": true,
		"declaration": true,
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true
	},
	"files": [
		"src/numberMask.ts",
		"src/numberMaskReactWrapper.ts"
	],
	"exclude": [
		"node_modules",
		"build",
		"./"
	]
}